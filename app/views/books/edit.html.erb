<h1>Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>
  <div class="field">
    <p class="edit-book">Title</p>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <p class="edit-book">Body</p>
    <%= f.text_area :body %>
  </div>
  <div class="field"><%= f.submit 'Update Book' %></div>
<% end %>
<%= link_to "Show",book_path(@book) %>
|
<%= link_to "Back",books_path(@book) %>